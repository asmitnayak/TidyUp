<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background"
    tools:context=".AddTaskToTaskPage">

    <TextView
        android:id="@+id/addTaskMessage"
        android:layout_width="329dp"
        android:layout_height="107dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Add Task to Task Page"
        android:textAlignment="center"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--android:onClick="returnToTaskPage" -->


    <TextView
        android:id="@+id/taskRewardPenaltyValue"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Point Value"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481" />

    <RadioGroup
        android:id="@+id/apRewardButtonGroup"
        android:layout_width="284dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskRewardPenaltyValue" />

    <EditText
        android:id="@+id/taskName"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:hint="Name"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345" />

    <TextView
        android:id="@+id/taskRepetition"
        android:layout_width="111dp"
        android:layout_height="45dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Repetition"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <Spinner
        android:id="@+id/taskRepetitionValue"
        android:layout_width="145dp"
        android:layout_height="57dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="74dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761" />

    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontAndButtonColor"
        android:fontFamily="@font/architects_daughter"
        android:onClick="returnToTaskPage"
        android:text="Add Task"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <EditText
        android:id="@+id/taskDueDate"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:hint="Due Date DD/MM"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687" />

    <EditText
        android:id="@+id/personAssignedToTask"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:layout_below="@+id/taskName"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:hint="Person "
        android:textColor="@color/fontAndButtonColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <Spinner
        android:id="@+id/rewardPenaltyValue"
        android:layout_width="109dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="74dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

</androidx.constraintlayout.widget.ConstraintLayout>