<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue_background">

    <EditText
        android:id="@+id/uaNewUsername"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:ems="10"
        android:fontFamily="@font/bad_script"
        android:hint="New Username"
        android:inputType="textPersonName"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <EditText
        android:id="@+id/uaNewEmail"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/bad_script"
        android:hint="New Email"
        android:inputType="none|textEmailAddress"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uaNewUsername"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/uaNewPassword"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:fontFamily="@font/bad_script"
        android:hint="New Password"
        android:inputType="textPersonName|textPassword"
        android:textColor="@color/fontAndButtonColor"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uaNewEmail"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/uaUpdateUsernameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontAndButtonColor"
        android:fontFamily="@font/bad_script"
        android:onClick="updateUsername"
        android:text="Update"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/uaNewUsername"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/uaUpdateEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/fontAndButtonColor"
        android:fontFamily="@font/bad_script"
        android:onClick="updateEmail"
        android:text="Update"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/uaNewEmail"
        app:layout_constraintTop_toBottomOf="@+id/uaUpdateUsernameButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/uaUpdatePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/fontAndButtonColor"
        android:fontFamily="@font/bad_script"
        android:onClick="updatePassword"
        android:text="Update"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/uaNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/uaUpdateEmailButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/uaReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fontAndButtonColor"
        android:fontFamily="@font/bad_script"
        android:onClick="goToAccountPage"
        android:text="Return"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

</androidx.constraintlayout.widget.ConstraintLayout>